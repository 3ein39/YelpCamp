<% layout('layouts/boilerplate') -%>
    <h1>All Campgrounds!</h1>
    <div>
        <a href="/campgrounds/new">Add new campground</a>
    </div>

    <% for (camp of campgrounds){ %>
        <div class="card mb-3" style="max-width: auto;">
            <div class="row g-0">
                <div class="col-md-4">
                    <img src="<%= camp.image %> " class="img-fluid rounded-start">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= camp.title %>
                        </h5>
                        <p class="card-text">
                            <%= camp.description %>
                        </p>
                        <p class="card-text"><small class="text-muted">
                                <%= camp.location %>
                            </small></p>

                        <a href="/campgrounds/<%= camp._id %> " class="btn btn-primary ">
                            <%= camp.title %>
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <% }%>